{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cc",
            "args": ["${file}", "-o", "${fileBasenameNoExtension}.out", "-g"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "launch",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}.out "
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": ["-r", "*.out", "*.dSYM"]
        }
    ]
}