{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "osx": {
                "command": "sh misc/build-mac.sh"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "clean",
            "osx": {
                "command": "rm -r *.out *.out.dSYM"
            }
        },
        {
            "type": "shell",
            "label": "run",
            "osx": {
                "command": "./main.out"
            }
        }
    ]
}