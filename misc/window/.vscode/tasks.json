{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "windows": {
                "command": "win32_build.bat",
            },
            "osx": {
                "command": "sh",
                "args": ["mac_build.sh"]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "launch",
            "type": "shell",
            "windows": {
                "command": "window.exe"
            },
            "osx": {
                "command" : "./window.out"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "osx": {
                "command": "rm",
                "args": ["-r", "*.out", "*.dSYM", "*.o"]
            }
        }
    ]
}