{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": ["${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}.exe", "-g"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "launch",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.exe"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": ["-r", "${fileDirname}/*.exe", "${fileDirname}/*.dSYM"]
        }
    ]
}