{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "windows": {
                "command": "win32_build.bat",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "launch",
            "type": "shell",
            "windows": {
                "command": "window.exe"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "windows": {
                "command": "rm",
                "args": ["-r", "${fileDirname}/*.exe"]
            }
        }
    ]
}